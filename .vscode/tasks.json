{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Clang",
      "group": "build",
      "type": "shell",
      "command": "cargo watch --package clang",
      "problemMatcher": "$rustc-watch",
      "isBackground": true
    },
    {
      "label": "Build Clang",
      "group": "build",
      "type": "shell",
      "command": "cargo build --package clang",
      "problemMatcher": "$rustc"
    },
    {
      "label": "Build Qnarre",
      "dependsOn": [
        "Build Clang",
      ],
      "problemMatcher": "$rustc"
    },
    {
      "label": "Build Extension in Background",
      "group": "build",
      "type": "npm",
      "script": "watch",
      "path": "editors/code/",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/editors/code/"
        ]
      },
      "isBackground": true,
    },
    {
      "label": "Pretest",
      "group": "build",
      "isBackground": false,
      "type": "npm",
      "script": "pretest",
      "path": "editors/code/",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/editors/code/"
        ]
      }
    },
  ]
}